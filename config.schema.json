{
  "pluginAlias": "laundrify",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "laundrify",
        "placeholder": "laundrify",
        "required": true
      },
      "authCode": {
        "title": "AuthCode",
        "description": "This code can be obtained in the laundrify-App",
        "type": "string",
        "pattern": "^\\d{3}-\\d{3}$",
        "required": true,
        "placeholder": "xxx-xxx"   
      },
      "pollInterval": {
        "title": "Poll Interval (in seconds)",
        "type": "integer",
        "required": false,
        "default": 60,
        "minimum": 10
      },
      "invertStatus": {
        "title": "Invert status",
        "description": "Check this option to use OPEN => On / CLOSE => Off (will be enabled by default in v2.0.0)",
        "type": "boolean"
      }
    }
  }
}